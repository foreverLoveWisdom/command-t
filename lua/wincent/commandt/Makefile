CC = gcc

CCFLAGS += -Wall -Wextra -Wno-unused-parameter

ifdef DEBUG
    CCFLAGS += -DDEBUG
endif

DLLEXT := so

ifeq ($(OS),Windows_NT)
    CCFLAGS += -D WIN32
    DLLEXT := dll
else
    UNAME := $(shell uname -s)
    ifeq ($(UNAME),Darwin)
        CC = xcrun clang
        CCFLAGS += -D MACOS
    endif
    ifeq ($(UNAME),Linux)
        CCFLAGS += -D LINUX
    endif
endif

LIBS = -lpthread
SRCDIR = .
HDRS = $(SRCDIR)/heap.h $(SRCDIR)/match.h $(SRCDIR)/matcher.h
SRCS = commandt.c heap.c match.c matcher.c

commandt.$(DLLEXT): $(HDRS) $(SRCS) Makefile
	$(CC) $(CCFLAGS) -shared -fPIC -o commandt.$(DLLEXT) $(SRCS)
